<%
  image_url = [
    "ace_of_hearts.png",
    "2_of_hearts.png",
    "3_of_hearts.png",
    "4_of_hearts.png",
    "5_of_hearts.png",
    "6_of_hearts.png",
    "7_of_hearts.png",
    "8_of_hearts.png",
    "9_of_hearts.png",
    "10_of_hearts.png",
    "jack_of_hearts2.png",
    "queen_of_hearts2.png",
    "king_of_hearts2.png",
  ]
%>

<button type="button" class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <%= image_tag(asset_path("card-back"), alt: "Card back") %>
    </div>
    <div class="flip-card-back">
      <%= image_tag(asset_path(image_url[value]), alt: "Card #{value}") %>
    </div>
  </div>
</button>
